<?xml version="1.0" encoding="UTF-8"?>
  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:orientation="horizontal" android:layout_width="fill_parent"  
    android:layout_height="fill_parent">  
  
    <ImageView android:id="@+id/notif_image" 
        android:layout_width="wrap_content"  
        android:layout_height="fill_parent"
        android:src="@drawable/ic_launcher"
        android:layout_margin="8dip"/>  
  
    <TextView android:id="@+id/notif_title" 
        android:layout_width="fill_parent"
        android:singleLine="true"
        android:ellipsize="end" 
        android:layout_toEndOf="@+id/notif_image"  
        android:layout_toRightOf="@+id/notif_image"
        android:textSize="18dip"
        android:layout_marginTop="8dip"
        android:text="default title"
        android:layout_height="wrap_content" 
        android:textColor="@android:color/primary_text_dark" />  
        
    <TextView android:id="@+id/notif_content" 
        android:layout_width="fill_parent"
        android:singleLine="true" 
        android:ellipsize="end"
        android:layout_toEndOf="@+id/notif_image"
        android:layout_toRightOf="@+id/notif_image"
        android:layout_below="@+id/notif_title"  
        android:textSize="14dip"
        android:text="default content"
        android:layout_marginTop="0dip"
        android:layout_height="wrap_content" 
        android:textColor="@android:color/secondary_text_dark" />  
          
    <ProgressBar android:id="@+id/notif_progress"  
        style="?android:attr/progressBarStyleHorizontal"   
        android:layout_toEndOf="@+id/notif_image"
        android:layout_toRightOf="@+id/notif_image"
        android:layout_below="@+id/notif_content"
        android:layout_marginEnd="10dip"
        android:layout_marginRight="10dip"
        android:layout_width="fill_parent" android:layout_height="wrap_content"  
        android:max="100" android:progress="50" />  
  
  
</RelativeLayout>   